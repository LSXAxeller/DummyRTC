[host_machine]
system = 'android'
cpu_family = 'aarch64'
cpu = 'aarch64'
endian = 'little'

[binaries]
c = get_env('ANDROID_NDK_ROOT') + '/toolchains/llvm/prebuilt/linux-x86_64/bin/aarch64-linux-android21-clang'
cpp = get_env('ANDROID_NDK_ROOT') + '/toolchains/llvm/prebuilt/linux-x86_64/bin/aarch64-linux-android21-clang++'
ar = get_env('ANDROID_NDK_ROOT') + '/toolchains/llvm/prebuilt/linux-x86_64/bin/aarch64-linux-android-ar'
strip = get_env('ANDROID_NDK_ROOT') + '/toolchains/llvm/prebuilt/linux-x86_64/bin/aarch64-linux-android-strip'