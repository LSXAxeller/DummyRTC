[host_machine]
system = 'android'
cpu_family = 'arm'
cpu = 'armv7'
endian = 'little'

[built-in options]
c_args = ['-march=armv7-a', '-mfloat-abi=softfp', '-mfpu=neon']
cpp_args = ['-march=armv7-a', '-mfloat-abi=softfp', '-mfpu=neon']

[binaries]
c = get_env('ANDROID_NDK_ROOT') + '/toolchains/llvm/prebuilt/linux-x86_64/bin/armv7a-linux-androideabi21-clang'
cpp = get_env('ANDROID_NDK_ROOT') + '/toolchains/llvm/prebuilt/linux-x86_64/bin/armv7a-linux-androideabi21-clang++'
ar = get_env('ANDROID_NDK_ROOT') + '/toolchains/llvm/prebuilt/linux-x86_64/bin/arm-linux-androideabi-ar'
strip = get_env('ANDROID_NDK_ROOT') + '/toolchains/llvm/prebuilt/linux-x86_64/bin/arm-linux-androideabi-strip'